@using Microsoft.AspNetCore.Identity
@using BugTrack.Areas.Identity.Data

@inject SignInManager<BugTrackUser> SignInManager
@inject UserManager<BugTrackUser> UserManager

<ul class="navbar-nav e-btn-group">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <a id="manage"  class="btn" title="Manage">Hello @UserManager.GetUserName(User)!</a>
    </li>
    <li class="nav-item">
            <form id="logoutForm" class="form-inline"   asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/Index", new { area = "" })">
                <button id="logout" type="submit" class="btn" style="color:#fff">Logout</button>
        </form>
    </li>
}
else
{
    
        <li class="nav-item" >
            <a id="register" class="btn no-a-decoration" asp-area="Identity" asp-page="/Account/Register">Register</a>
    </li>
        <li class="nav-item" >
            <a class="btn no-a-decoration" id="login"  asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li>
}
</ul>
