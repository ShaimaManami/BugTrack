<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Bug Track</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <!--<link rel="stylesheet" href="https://cdn.syncfusion.com/ej2/20.3.47/material.css" />-->
    <link rel="stylesheet" href="https://code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
    <link rel="stylesheet" href="https://cdn.syncfusion.com/ej2/20.3.47/fluent.css" />
    <link href="https://cdn.syncfusion.com/ej2/20.3.47/bootstrap5-dark.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.0/css/all.min.css" integrity="" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <script src="https://cdn.syncfusion.com/ej2/20.3.47/dist/ej2.min.js"></script>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BugTrack.styles.css" asp-append-version="true" />
    <script src="https://cdn.syncfusion.com/ej2/20.3.47/dist/ej2.min.js"></script>
    

</head>
<body class="e-bigger">
    <partial name="_Sidebar" />
    
    <div class="dock-target">
    <nav class="navbar sticky-top">
        <div class="container-fluid py-2 px-4">
                <a href="https://github.com/ShaimaManami/bugTrack" target="_blank" class="no-a-decoration">
                    <i class="fa fa-solid fa-code "></i>
                </a>
            <div>
                    @*<a href="#" class="no-a-decoration"><i class="fa fa-solid fa-user "></i></i></a>*@
                    <partial name="_LoginPartial" />
            </div>
                
        </div>

    </nav>
   
    <div class="main-content">
    <div class="container mt-5">
                <div class="@(ViewData["isKanban"]== null? "col-md-10":"col-md-12")" style="width:100%">
            <div class=" col-md-10">
                <main role="main" class="pb-3">
                            @if (ViewData["isKanban"] == null)
                        {
                    <div class="row">
                        <div class="d-flex flex-column mb-5">
                            <div class="d-flex mb-1">
                                <div class="flex-grow-1">
                                 <h3 class="fw-bold">@ViewData["PageTitle"]</h3>
                                </div>
                                <div>
                                    @if (ViewData["PageActionText"] != null)
                                    {
                                                    <a class="btn btn-success " href="@ViewData["PageActionUrl"]">
                                        @ViewData["PageActionText"]
                                    </a>
                                    }
                                </div>


                            </div>
                                        @if (ViewData["Title"] != "Log in" && ViewData["Title"] != "Log out"
                                       && ViewData["Title"] != "Register")
                                        {
                                        
                            <ejs-breadcrumb id="breadcrumb" separatorTemplate="@Html.Raw("<span class='fa-solid fa-angle-right'></span>")">

                            </ejs-breadcrumb>
                                        }
                        </div>
                    </div>
                        }
                    @RenderBody()
                </main>
            </div>
        </div>
        
    </div>
    </div>
    </div>

  
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    <ejs-scripts></ejs-scripts>
</body>
</html>
